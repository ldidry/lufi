
<section class="logout-section">
% if (defined stash('msg')) {
    <article class="message-card error"><%= stash('msg') %></article>
% } else {
    <article class="info">
        <p><%= l('You have been successfully logged out.') %></p>
        <a class="button" href="<%= url_for('login') %>"><%= l('Signin') %></a>
    </article>
% }
</section>